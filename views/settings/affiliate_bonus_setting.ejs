<!DOCTYPE html>
<html lang="en">

    <%- include ../layouts/header.ejs %>
    <style>
        .form-control-event{
            margin-right: 55px;
            padding: 10px;
        }
    </style>
<body class="nav-md preloader-off">
    <div class="pace-cover"></div>
    <div id="st-container" class="st-container st-effect">
        <!-- MAIN PAGE CONTAINER -->
        <div class="container body">
            <div class="main_container">

                <%- include ../layouts/sidebar.ejs %>

                <!-- PAGE CONTENT -->
                <div class="right_col no-padding" role="main">
                        <div class="data_background text-center"  data-background='assets/images/dasbg1.jpg'>
                            <div class="background-opacity">
                            <div class="clearfix"></div>
                            <div class="padding-30lr col-md-12">
                        <!-- <div class="header-title-breadcrumb element-box-shadow">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-7 col-sm-6 col-xs-12 text-left">
                                        <h3>Affiliate Bonus Setting</h3>
                                    </div>
                                </div>
                            </div>
                        </div> -->
                        <div class="spacer_30"></div>
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12 col-lg-12">
                                <!--Personal details-->
                                <div class="panel panel-warning panel-cryptic element-box-shadow">
                                        <div class="panel-heading">
                                                <h3 class="no-margin text-center">Affiliate Bonus Setting</h3>
                                            </div>
                                    <div class="panel-body padding_30">
                                        <% if( role == "SuperAdmin"){ %>
                                            <form action="/affiliate_bonus" method="POST" class="form-horizontal">
                                                <fieldset>
                                                    <div class="form-group col-lg-6">
                                                        <label for="username" class="col-lg-12 control-label">Level1</label>
                                                        <div class="col-lg-12">
                                                            <input class="form-control input-type-1" name="level1" value="<%= bonus[0].bonus%>" type="number" >
                                                        </div>
                                                    </div>
                                                    <div class="form-group col-lg-6">
                                                        <label for="sponsor" class="col-lg-12 control-label">Level2</label>
                                                        <div class="col-lg-12">
                                                            <input class="form-control input-type-1" name="level2" value="<%= bonus[1].bonus%>"  type="number" >
                                                        </div>
                                                    </div>
                                                    <div class="form-group col-lg-6">
                                                        <label for="sponsor" class="col-lg-12 control-label">Level3</label>
                                                        <div class="col-lg-12">
                                                            <input class="form-control input-type-1" name="level3" value="<%= bonus[2].bonus%>"  type="number" >
                                                        </div>
                                                    </div>
                                                    <div class="form-group col-lg-6">
                                                        <label for="username" class="col-lg-12 control-label">Level4</label>
                                                        <div class="col-lg-12">
                                                            <input class="form-control input-type-1" name="level4" value="<%= bonus[3].bonus%>" type="number" >
                                                        </div>
                                                    </div>
                                                    <div class="form-group col-lg-6">
                                                        <label for="sponsor" class="col-lg-12 control-label">Level5</label>
                                                        <div class="col-lg-12">
                                                            <input class="form-control input-type-1" name="level5" value="<%= bonus[4].bonus%>"  type="number" >
                                                        </div>
                                                    </div>
                                                    <div class="form-group col-lg-6">
                                                        <label for="sponsor" class="col-lg-12 control-label">Level6</label>
                                                        <div class="col-lg-12">
                                                            <input class="form-control input-type-1" name="level6" value="<%= bonus[5].bonus%>"  type="number" >
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-12">
                                                        <button  type="submit" class="btn btn-blue">Save</button>  
                                                    </div>
                                                </fieldset>
                                            </form>
                                        <% } %>
                                    </div><!-- END panel-body -->
                                </div><!-- END Personal details-->
                               
                            </div>
                        </div>
                        </div>
                        </div>
                        </div>

                <a href="#" class="scrollToTop"><i class="fa fa-chevron-up text-white" aria-hidden="true"></i></a>
                <!-- PAGE FOOTER -->
                
          </div>
        </div>
    </div>

    <%- include ../layouts/footer.ejs %>
    <script>
        $('#residence').select2();
        $('#citizenship').select2();

        $('#user_photo').click(function(){
            $('#select_img').trigger('click');
        });
        $('#select_img').change(function(){
            $('#upload_form').submit();
        });
    </script>
</body>
</html>
